$('#eventForm').submit(function (e) {
          e.preventDefault();
          var fd = new FormData(this);

          $.ajax({
               url: '/newpsswd/',
               data: fd,
               processData: false,
               contentType: false,
               type: 'POST',
               success: function(data){
               }
          });
     });
	</script>
